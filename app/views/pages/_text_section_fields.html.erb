<li id="text_section">
  <div id="category">
    Text Section <br />
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy, t(:remove) %>
  </div>
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :subtitle %>
  <%= f.text_field :subtitle %><br />
  <%= f.hidden_field :type %>
  <ul>
    <%= f.semantic_fields_for :subsections do |ref| %>
      <%= render 'text_subsection_fields', :f => ref %>
    <% end %>
    <li>
      <%= link_to_add_fields add(:text_paragraph), f, :subsections, TextSubsection.new %>
    </li>
  </ul>
</li>
